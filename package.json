{
  "name": "github-semver-workflows",
  "version": "1.0.0",
  "description": "A repository containing reusable GitHub Actions workflows with semantic versioning and automated releases",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/github-semver-workflows.git"
  },
  "keywords": [
    "github-actions",
    "workflows",
    "semantic-versioning",
    "semantic-release",
    "commitizen",
    "ci-cd"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/github-semver-workflows/issues"
  },
  "homepage": "https://github.com/your-org/github-semver-workflows#readme",
  "scripts": {
    "commit": "cz",
    "semantic-release": "semantic-release",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "semantic-release": "^22.0.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
